{
  "name": "@probot/get-private-key",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "Get private key from a path, environment variables, or a `*.pem` file in the current working directory",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.mjs && tsc -p tsconfig.json",
    "lint": "prettier --check '{src,test}/**/*.{ts,md}' *.md *.json",
    "lint:fix": "prettier --write '{src,test}/**/*.{ts,md}' *.md *.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "repository": "github:probot/get-private-key",
  "keywords": [
    "github-app",
    "probot"
  ],
  "author": "Gregor Martynus (https://twitter.com/gr2m)",
  "license": "ISC",
  "devDependencies": {
    "@octokit/tsconfig": "^2.0.0",
    "@types/jest": "^29.0.0",
    "esbuild": "^0.19.4",
    "glob": "^10.3.10",
    "jest": "^29.0.0",
    "prettier": "^2.1.2",
    "semantic-release": "^22.0.5",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.test.json"
        }
      ]
    },
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  }
}
