{
  "name": "@probot/get-private-key",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "Get private key from a path, environment variables, or a `*.pem` file in the current working directory",
  "scripts": {
    "build": "pika build",
    "lint": "prettier --check '{src,test}/**/*.{ts,md}' *.md *.json",
    "lint:fix": "prettier --write '{src,test}/**/*.{ts,md}' *.md *.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "repository": "github:probot/get-private-key",
  "keywords": [
    "github-app",
    "probot"
  ],
  "author": "Gregor Martynus (https://twitter.com/gr2m)",
  "license": "ISC",
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.0",
    "@pika/plugin-build-web": "^0.9.0",
    "@pika/plugin-ts-standard-pkg": "^0.9.0",
    "@tsconfig/node12": "^1.0.7",
    "@types/jest": "^27.0.0",
    "jest": "^26.0.1",
    "prettier": "^2.1.2",
    "semantic-release": "^19.0.2",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^4.0.5"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true
        }
      }
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ]
    ]
  },
  "dependencies": {
    "@types/is-base64": "^1.1.0",
    "is-base64": "^1.1.0"
  }
}
